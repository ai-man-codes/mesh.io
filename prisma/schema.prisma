generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Department    String?
  Section       String?
  Year          String?
  proposals Proposal[]
  vacancies Vacancy[]
}

model Event{
  id String @id @default(cuid())
  name String
  image_url String
  description String
  start_date DateTime
  end_date DateTime
}

model Vacancy {
  id          String   @id @default(cuid())
  createdby   User      @relation(fields: [userId], references: [id])
  userId      String
  role        String // e.g., "Frontend Dev", "Designer"
  description String?
  isOpen      Boolean  @default(true)
  createdAt   DateTime @default(now())
  vacantTill  DateTime  
  vacancy_image String

  proposals Proposal[]
}

model Proposal {
  id        String         @id @default(cuid())
  message   String? // e.g., "I have 2 years experience in React"
  status    ProposalStatus @default(PENDING)
  createdAt DateTime       @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  vacancyId String
  vacancy   Vacancy @relation(fields: [vacancyId], references: [id])
}

enum ProposalStatus {
  PENDING
  ACCEPTED
  REJECTED
}